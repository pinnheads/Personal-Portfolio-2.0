---
import Layout from '../layouts/Layout.astro';
import RotatingCard from '../layouts/RotatingCard.astro';
import json from '../../public/resume.json';

const properties = {
    title: 'Experience',
    color: '#bb2d4e',
};

const color = properties.color;
const workHistory = json.work;

const date = (stringDate) => {
    let date = new Date(stringDate);
    let month = date.toLocaleString('default', { month: 'long' });
    let year = date.getFullYear();
    let formattedDate = `${month}-${year}`;
    return formattedDate
}
---

<Layout title={"Utsav Deep | " + properties.title}>
    <RotatingCard title={properties.title} color={properties.color}>
        <ol class='relative border-l border-gray-200 mx-8 my-12 text-left'>
            {
                workHistory.map((work) => (
                    <li class='mb-10 ml-4'>
                        <div class='absolute w-3 h-3 rounded-full mt-1.5 -left-1.5 border border-white dots' />
                        <time class='mb-1 text-sm 3xl:text-lg font-normal leading-none text-white'>
                            {date(work.startDate)} - {work.endDate == undefined ? 'Current' : date(work.endDate)}
                        </time>
                        <h3 class='text-2xl 3xl:text-3xl font-semibold text-[#bb2d4e] mt-4'>
                            {work.position} @{' '}
                            <a target='_blank' href={work.url}>
                                {work.name}
                            </a>
                        </h3>
                        <p class='mb-4 text-base 3xl:text-lg font-normal text-gray-200 text-justify'>{work.summary}</p>
                        <a class='text-lg 3xl:text-xl text-white font-semibold underline' href="/resume.pdf">Check out my resume for more details</a>
                    </li>
                ))
            }
        </ol>
    </RotatingCard>
</Layout>

<style define:vars={{ color }}>
    .dots {
        background-color: var(--color);
        border-color: var(--color);
    }
</style>

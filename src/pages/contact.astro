---
import Layout from '../layouts/Layout.astro';
import RotatingCard from '../layouts/RotatingCard.astro';
import Socials from '../components/socials/socials.astro';

const properties = {
    title: 'Contact',
    color: '#10acc7',
};
---

<Layout title={properties.title}>
    <RotatingCard title={properties.title} color={properties.color}>
        <div class='flex flex-col lg:flex-row my-auto overflow-hidden'>
            <div class='border-b-2 w-auto basis-2/3 lg:border-r-2 lg:border-b-0 mx-auto'>
                <div class='text-left mt-7 md:mt-12 md:mx-8'>
                    <p class='3xl:text-xl font-semibold md:mb-4'>
                        Hey, thank you for visiting my page. You can reach out to me at any moment and I'll get back to
                        you as soon as possible.
                    </p>
                    <p class='3xl:text-xl font-medium text-slate-300 hidden md:contents'>
                        You can send me a message below or connect with me on the platforms listed on the side.
                    </p>
                </div>
                <form class='w-auto mx-8 my-7 md:my-12'>
                    <div class='flex flex-col -mx-3 mb-6'>
                        <div class='w-full md:mb-0'>
                            <input
                                class='appearance-none block w-full bg-[#111418] border-b-2 border-[#10acc7] text-slate-200 rounded-lg py-3 px-4 mb-3 leading-tight focus:outline-none focus:border-gray-500'
                                id='grid-first-name'
                                type='text'
                                placeholder='First Name'
                            />
                        </div>
                        <div class='w-full'>
                            <input
                                class='appearance-none block w-full bg-[#111418] border-b-2 border-[#10acc7] text-slate-200 rounded-lg py-3 px-4 leading-tight focus:outline-none focus:border-gray-500'
                                id='grid-last-name'
                                type='text'
                                placeholder='Last Name'
                            />
                        </div>
                    </div>
                    <div class='flex flex-wrap -mx-3 mb-3'>
                        <div class='w-full'>
                            <input
                                class='appearance-none block w-full bg-[#111418] border-b-2 border-[#10acc7] text-slate-200 rounded-lg py-3 px-4 mb-3 leading-tight focus:outline-none focus:border-gray-500'
                                id='email'
                                type='email'
                                placeholder='Email'
                            />
                        </div>
                    </div>
                    <div class='flex flex-wrap -mx-3 mb-6'>
                        <div class='w-full'>
                            <textarea
                                class='no-resize appearance-none block w-full bg-[#111418] border-b-2 border-[#10acc7] text-slate-200 rounded-lg py-3 px-4 mb-3 leading-tight focus:outline-none focus:border-gray-500 h-20 3xl:h-48 resize-none'
                                id='message'
                                placeholder='Your message goes here...'></textarea>
                        </div>
                    </div>
                    <button
                        class='shadow bg-[#10acc7] focus:shadow-outline focus:outline-none text-white font-bold py-3 px-4 rounded w-40'
                        type='button'
                    >
                        Send
                    </button>
                </form>
            </div>
            <div class='flex basis-1/3 m-auto text-center align-middle content-center p-auto place-content-center'>
                <Socials />
            </div>
        </div>
    </RotatingCard>
</Layout>


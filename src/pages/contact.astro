---
import Layout from '../layouts/Layout.astro';
import RotatingCard from '../layouts/RotatingCard.astro';
import Socials from '../components/socials/socials.astro';
import Form from '../components/ContactForm/form.astro';

const properties = {
    title: 'Contact',
    color: '#10acc7',
};
---

<Layout title={"Utsav Deep | "+ properties.title}>
    <RotatingCard title={properties.title} color={properties.color} slot="default" btnText='' id=''>
        <div
            class='flex flex-col-reverse lg:flex-row divide-y-2 divide-y-reverse lg:divide-x-2 lg:divide-y-0 my-auto overflow-hidden'
        >
            <div class='w-auto basis-2/3 mx-auto'>
                <div class='text-left mt-7 md:mt-12 mx-4 md:mx-8 animate-fade-left animate-delay-200'>
                    <p class='xl:text-xl font-semibold text-slate-300 md:mb-4 '>
                        Hey, thank you for visiting my page. You can reach out to me at any moment and I'll get back to
                        you as soon as possible.
                    </p>
                    <p class='xl:text-xl font-medium text-slate-300 hidden md:contents '>
                        You can send me a message below or connect with me on the platforms listed on the side.
                    </p>
                </div>
                <Form />
            </div>
            <div class='flex basis-1/3 mx-auto text-center align-middle content-center p-auto place-content-center animate-fade-up animate-delay-300'>
                <Socials />
            </div>
        </div>
    </RotatingCard>
</Layout>


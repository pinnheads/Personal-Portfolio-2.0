---
import Navbar from "../components/navbar/navbar.svelte";
import Footer from "../components/footer/footer.svelte";
import "@fontsource/open-sans";
import "@fontsource/league-spartan";

export interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Primary Meta Tags -->
        <title>{title}</title>
        <meta name="title" content="Utsav Deep" />
        <meta
            name="description"
            content="Hi there, I'm Utsav. My current focus is to excel in the field of Test Automation and to build products that help people in their day to day lives."
        />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://utsavdeep.com/" />
        <meta property="og:title" content="Utsav Deep" />
        <meta
            property="og:description"
            content="Hi there, I'm Utsav. My current focus is to excel in the field of Test Automation and to build products that help people in their day to day lives."
        />
        <meta property="og:image" content="" />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content="https://utsavdeep.com/" />
        <meta property="twitter:title" content="Utsav Deep" />
        <meta
            property="twitter:description"
            content="Hi there, I'm Utsav. My current focus is to excel in the field of Test Automation and to build products that help people in their day to day lives."
        />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <meta name="generator" content={Astro.generator} />
    </head>
    <div class="z-20 flex flex-col h-screen">
        <section class="basis-1/12">
            <Navbar client:load />
        </section>
        <div
            class="flex justify-items-center align-middle text-center w-100 mt-5 rounded-3xl mx-2 wrapper z-10 basis-10/12 max-h-[75vh] md:max-h-full shadow-xl shadow-gray-500"
            style="background-color: #111418;"
        >
            <div class="w-full">
                <slot />
            </div>
        </div>
        <section class="flex basis-1/12 items-start 3xl:items-center">
            <Footer client:idle />
        </section>
    </div>
    <style is:global>
        :root {
            --color-bg: #e7eaee;
            --color-border: hsl(17, 24%, 90%);
        }
        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            font-family: "League Spartan", sans-serif;
        }

        html {
            font-family: "Open Sans", sans-serif;
            color: #cad2c5;
            background-color: var(--color-bg);
            overflow: hidden;
        }
        body {
            margin: 0;
        }

        .wrapper {
            overflow: auto;
        }

        @media only screen and (min-device-width: 768px) and (max-device-width: 1024px) and (orientation: portrait) {
            .wrapper {
                margin-top: -0.5rem;
            }
        }
    </style>


</html>
